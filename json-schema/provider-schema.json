{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "provider-schema.json",
    "description": "Draft schema for validating LSIP provider descriptions with no extensions.",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "name",
        "identifier",
        "id",
        "address",
        "offers"
    ],
    "properties": {
        "id": {
            "$ref": "common-schema.json#id"
        },
        "name": {
            "$ref": "common-schema.json#name"
        },
        "identifier": {
            "$ref": "#prn-schema"
        },
        "type": {
            "$ref": "http-uri-schema.json"
        },
        "address": {
            "oneOf": [
                {
                    "type": "string"
                },
                {
                    "type": "object",
                    "$ref": "location-schema.json"
                }
            ]
        },
        "offers": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "subjectWebpage": {
            "$ref": "http-uri-schema.json"
        }
    },
    "$defs": {
        "prn-identifier": {
            "$anchor": "prn-schema",
            "type": "object",
            "required": [
                "type",
                "identifierTypeName",
                "identifierValueCode"
            ],
            "properties": {
                "type": {
                    "enum": [
                        "IdentifierValue"
                    ]
                },
                "identifierTypeName": {
                    "enum": [
                        "UKPRN"
                    ]
                },
                "identifierValueCode": {
                    "type": "string",
                    "minLength": 8,
                    "maxLength": 8
                }
            }
        }
    }
}